<%= render "partials/title" %>

<div class="container" >

  <%= form_for(x) do |f| %>
  <% x.errors.full_messages.each do |message| %>

      <div class="">
        * <%= message %>
      </div>
    <%end%>

      <div class="d-flex" style="margin-top: 30px">
        <%= f.text_field :title, placeholder: "Titulo del articulo", class: "full-width"%>
      </div>
      <div class="d-flex" style="margin-top: 5px">
        <%= f.text_field :img, placeholder: "Imagen principal", class: "full-width"%>
      </div>
      <div class="" style="margin-top: 5px">
        <%= f.cktext_area :body, placeholder: "Titulo del articulo", class: "full-width"%>
      </div>
      <div class="d-flex justify-content-end">
        <%= f.submit "Guardar", class: "btn btn-info" %>

      </div>
    <%end%>
</div>
