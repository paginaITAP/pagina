      <p><ion-icon name="arrow-dropright"></ion-icon>mensaje</p>
      <span id="btnClose">cerar</span>
    </div>
</div>

<div class="">
  <%= render "partials/title" %>
</div>


<div class="container">


  <div class="row">
    <div class="form_wrap">

      <div class="contact_info">

        <div class="info_title">

          <span class="icon_contact">
            <ion-icon name="contact"></ion-icon>
          </span>
          <h2>INFORMACIÓN <br> DE CONTACTO</h2>

        </div>

        <div class="info_items">
          <div class="">
            <span class="mail">
              <p><ion-icon name="mail" class="mail"></ion-icon>email</p>
            </span>
            <span class="cell">
              <p><ion-icon name="call"></ion-icon>7267121 ó 72671231</p>
            </span>
          </div>

          <div class="">
            <span class="facebook">
            <a href="https://www.facebook.com/InstitutoTecnicoBarichara/?ref=aymt_homepage_panel"><ion-icon name="logo-facebook" class="facebook"></ion-icon></a>
            </span>
            <span class="twitter">
              <a href="https://twitter.com/?lang=es"> <ion-icon name="logo-twitter" class="twitter"></ion-icon></a>
            </span>
            <span class="youtube">
              <a href="https://www.youtube.com/channel/UCLP1ts1j6-_U-QLG3QKc5ow/featured"><ion-icon name="logo-youtube" class="youtube"></ion-icon></a>
            </span>
          </div>

        </div>


      </div>

      <form class="form_contact" action="index.html" method="post">

