        <div class="user_info">

          <label for="nombre">Nombre</label>
          <input type="text" id="nombre">

          <label for="nombre">Telefono</label>
          <input type="text" id="Telefono">

          <label for="nombre">Correo Electrónico</label>
          <input type="text" id="Correo_Electrónico">

          <label for="nombre">Mensaje</label>
          <textarea id="Mensaje"></textarea>

          <input type="button" value="enviar mensaje" id="btnSend">

        </div>

      </form>

    </div>


    <div class="row">
      <h1  style="width: 100%;text-align: center;"> <%= ion_icon "map", text: "Mapa" %> </h1>
      <br><hr style="width: 100%;"></br>
      <iframe class="maps" src= "<%= map %>"width="100%" height="500" frameborder="0" style="border:0" allowfullscreen>
      </iframe>
  </div>

  </div>

  <script src="https://unpkg.com/ionicons@4.1.0/dist/ionicons.js"></script>

